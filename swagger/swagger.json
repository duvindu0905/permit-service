{
  "openapi": "3.0.0",
  "info": {
    "title": "Permit Service API",
    "description": "API to manage permits",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8081"
    },
    {
      "url": "https://api.permitservice.bussewaya.online",
      "description": "Production Server"
    }
  ],
  "paths": {
    "/permit-service/permits": {
      "get": {
        "summary": "Get all permits",
        "tags": ["Permit"],
        "operationId": "getAllPermits",
        "responses": {
          "200": {
            "description": "List of permits",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Permit"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new permit",
        "tags": ["Permit"],
        "operationId": "createPermit",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Permit"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Permit created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Permit"
                }
              }
            }
          }
        }
      }
    },
    "/permit-service/permits/{permitNumber}": {
      "get": {
        "summary": "Get a permit by permitNumber",
        "tags": ["Permit"],
        "operationId": "getPermitByPermitNumber",
        "parameters": [
          {
            "name": "permitNumber",
            "in": "path",
            "required": true,
            "description": "The permit number to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Permit details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Permit"
                }
              }
            }
          },
          "404": {
            "description": "Permit not found"
          }
        }
      },
      "put": {
        "summary": "Update a permit by permitNumber",
        "tags": ["Permit"],
        "operationId": "updatePermitByPermitNumber",
        "parameters": [
          {
            "name": "permitNumber",
            "in": "path",
            "required": true,
            "description": "The permit number to update",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Permit"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Permit updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Permit"
                }
              }
            }
          },
          "404": {
            "description": "Permit not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a permit by permitNumber",
        "tags": ["Permit"],
        "operationId": "deletePermitByPermitNumber",
        "parameters": [
          {
            "name": "permitNumber",
            "in": "path",
            "required": true,
            "description": "The permit number to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Permit deleted successfully"
          },
          "404": {
            "description": "Permit not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Permit": {
        "type": "object",
        "properties": {
          "permitId": {
            "type": "number"
          },
          "permitNumber": {
            "type": "string"
          },
          "expiryAt": {
            "type": "string",
            "format": "date-time"
          },
          "vehicleNumber": {
            "type": "string"
          },
          "routeName": {
            "type": "string"
          },
          "routeNumber": {
            "type": "string"
          },
          "busOwner": {
            "type": "string"
          },
          "busType": {
            "type": "string"
          },
          "numberCapacity": {
            "type": "number"
          },
          "pricePerSeat": {
            "type": "number"
          },
          "music": {
            "type": "boolean"
          },
          "ac": {
            "type": "boolean"
          }
        },
        "required": ["permitId", "permitNumber", "expiryAt", "vehicleNumber", "routeNumber", "busOwner", "busType", "numberCapacity", "pricePerSeat", "music", "ac"]
      }
    }
  }
}
